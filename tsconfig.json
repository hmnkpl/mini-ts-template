{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": true,
    "types": ["vitest/globals"]
  },
  "include": ["./src/", "vitest.config.ts"]
}
